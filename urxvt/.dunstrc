[global]
  format = "<b>%a:</b> %s\n%b"
  allow_markup = yes
  markup = yes
  geometry = 600x3-16-36
  sort = yes
  monitor = 0
  padding = 16
  horizontal_padding = 16
  icon_position = left
  max_icon_size = 32
  font = IBM Plex Sans 16
  icon_folders = /usr/share/icons/Arc/:/usr/share/icons/Arc/emblems/32/:/usr/share/icons/Arc/status/32/:/usr/share/icons/gnome/32x32/status/
  transparency = 10
  word_wrap = false
  startup_notification = true

[frame]
  width = 2
  color = "#2f2f2f"

[urgency_low]
  background = "#3c3c3c"
  foreground = "#86cb92"
  timeout = 10

[urgency_normal]
  background = "#3c3c3c"
  foreground = "#f1f0cc"
  timeout = 15

[urgency_critical]
  background = "#ff5a5f"
  foreground = "#f1f0cc"
  timeout = 0
